@(Layout="~/Views/Shared/_Alayout.cshtml")
@model MvcApplication1.Models.Student

@{
    ViewBag.Title = "Update";
}

<h3>Update Student</h3>
<br>
<div class="content-bg">
<div class="wrap">
<div class="content top1">
<form action = "/Admin/UpdateStudent/@Model.Sid" method="post">
     Name        <input type = "text" value ="@Model.Name" name ="name"/><br><br>
     Email       <input type="text" value ="@Model.Email" name="email"><br><br>
     Password    <input type="text" value ="@Model.Password" name="pass"><br><br>
     Grade    <input type="text" value ="@Model.Grade" name="grade"><br><br>
    <input type="submit" value="Update Student"/>
</form>
</div></div></div>