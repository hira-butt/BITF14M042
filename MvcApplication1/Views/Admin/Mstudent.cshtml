@(Layout="~/Views/Shared/_Alayout.cshtml")
@model List<MvcApplication1.Models.Student>
@{
    ViewBag.Title = "Mstudent";
}

<h3>Manage Student</h3>

<div class="content-bg">
<div class="wrap">
<div class="content top1">
	<div class="cnt-btm">
