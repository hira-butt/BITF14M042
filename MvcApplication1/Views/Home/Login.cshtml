@(Layout = "~/Views/Shared/_loginLayout.cshtml")

@{
    ViewBag.Title = "Login";
}


<div class="content-bg">
<div class="wrap">
<div class="content">
<div class="section group">	
	<div class="col span_2_of_3">
			  <div class="contact-form">
			  	<h3>Sign In</h3>
				    <form action="/Home/LoginFunction" method="post"  id="signInForm" class="form-horizontal"
                        data-fv-framework="bootstrap"
                        data-fv-icon-valid="glyphicon glyphicon-ok"
                        data-fv-icon-invalid="glyphicon glyphicon-remove"
                        data-fv-icon-validating="glyphicon glyphicon-refresh">

					    <div class="form-group">
					    	<span><label class="col-xs-3 control-label">E-MAIL</label></span>
					    	<div class="col-xs-5">
                                <div class="col-xs-7">
                               <span>
                                <input type="email" class="form-control" value="" name="email" 
                                    data-fv-emailaddress="true"
                                    data-fv-emailaddress-message="The value is not a valid email address"
                                    required
                                    data-fv-notempty-message="The email is required"  />
					    	      </span></div></div>
					    </div>
					    <div class="form-group" >
					     	<span><label class="col-xs-3 control-label">PASSWORD</label></span>
					    		<div class="col-xs-5"><span>
                                    <input type="password" class="form-control" value="" name="password"
                                       required
                                    data-fv-notempty-message="The password is required" />
					    		</span></div>
					    </div>
					   <div class="form-group">
                           <div class="col-xs-6 col-xs-offset-3">
					   		<span><button type="submit" class="btn btn-default" value="Login">Sign In</button></span></div>
					  </div>
	     	    </form>
		    </div>
  		</div>	
</div>
</div>
</div>
</div>

<script>
    $(document).ready(function(){
        $('#signInForm').formValidation();
    });
</script>

